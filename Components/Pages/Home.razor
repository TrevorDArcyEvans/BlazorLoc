@page "/"

@using System.Globalization;

@inject IStringLocalizer<Home> Loc

<PageTitle>Home</PageTitle>

<h1>Current Culture Info</h1>

<ul>
  <li>CurrentCulture: @CultureInfo.CurrentCulture</li>
  <li>CurrentUICulture: @CultureInfo.CurrentUICulture</li>
</ul>

<h2>Greeting</h2>

<p>
  @Loc["Greeting"]
</p>

<p>
  @greeting
</p>

@code {
  private string? greeting;

  protected override void OnInitialized()
  {
    greeting = Loc["Greeting"];
  }

}
